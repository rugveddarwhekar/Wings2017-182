<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rugveddarwhekar.wings2017_18.Main2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collect your Favorites"
            android:id="@+id/title_findEvents"
            android:textSize="24sp"
            android:textColor="#4990E2"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="163dp"
            android:layout_height="156dp"
            android:background="@drawable/star_icon"
            android:layout_gravity="center"
            android:id="@+id/icon_findEvents"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="71dp"
            android:text="All the events you find interesting is easy to
save to your own favorites list. That way it is
easy to see all the events you like!"
            android:textAlignment="center"
            android:textColor="#4990E2"
            android:textSize="14sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="52dp"
            android:layout_height="12dp"
            android:background="@drawable/indicator_oval2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Skip"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#4990E2"
            android:textSize="16sp"/>

    </LinearLayout>
</RelativeLayout>
